<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.integra.hargapangan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalActivtiy"
        android:allowBackup="false"
        android:icon="@drawable/bar_chart"
        android:allowClearUserData="true"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeOne">
        <activity android:name=".activity.update.UpdateKomoditas">
        </activity>
        <activity android:name=".activity.detailInfoPangan.DetailInfoPangan" />
        <activity android:name=".activity.info.InfoPanganActivity" />
        <activity android:name=".activity.info.InfoPanganActivity2" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.login.LoginActivity" />
        <activity android:name=".DashboardActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>