<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_margin="1dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#2ADDDDDD"
        android:layout_marginEnd="2dp">

        <ImageView
            android:id="@+id/ivGambar1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tvnama1"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivGambar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llharga1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tvnama1"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/tvharga"
                android:background="@color/background"
                android:gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/background"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llharga1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#72DDDDDD"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:layout_marginEnd="5dp"
                android:background="@color/background" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center|bottom"
                android:background="@color/background"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#2ADDDDDD"
        android:layout_marginEnd="2dp">

        <ImageView
            android:id="@+id/ivGambar2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tvnama2"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivGambar2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llharga2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tvnama2"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/tvharga"
                android:background="@color/background"
                android:gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/background"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llharga2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#72DDDDDD"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:layout_marginEnd="5dp"
                android:background="@color/background" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center|bottom"
                android:background="@color/background"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#2ADDDDDD"
        android:layout_marginEnd="2dp">

        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tvnama"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivGambar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llharga"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tvnama"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/tvharga"
                android:background="@color/background"
                android:gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/padding_10"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/background"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llharga"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:background="#72DDDDDD"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:layout_marginEnd="5dp"
                android:background="@color/background" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center|bottom"
                android:background="@color/background"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>